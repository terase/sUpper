{
  "name": "__MSG_name__",
  "version": "0.9.0",
  "manifest_version":2,

  "description": "__MSG_description__",

  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },

  "default_locale": "en",

  "minimum_chrome_version": "13.0.0.0",

  "background": {
	"page":"src/background/background.html"
  },

  "page_action": {
    "default_icon": "icon/128.png",
    "default_title": "__MSG_name__"
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": [ "src/common/lib/jquery.min.js", 
            "src/common/lib/jquery.bottom.js",
            "src/content_scripts/script.js"
    ],
    "run_at" : "document_end",
    "all_frames" : false
  }],
  "web_accessible_resources": [
    "icon/64.png"
  ],
  "permissions": [
     "tabs"
  ]


}